@model takionline.Models.Kullanici

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

<h2>Profil Düzenleme</h2>
<form action="/Admin/ProfilKaydet">
    <input id="Id" name="Id" value="@(Model !=null? Model.Id : 0 )" hidden />
    <div class="form-group">
        <label for="Sifre"> Şifre</label>
        <input id=" pasword" name="Sifre" class="form-control" value="@(Model !=null? Model.Sifre : "" )" />
    </div>
    <div class="form-group">
        <label for="Adi">Adı</label>
        <input id=" Adi" name="Adi" class="form-control" placeholder=" Adını Giriniz" value="@(Model !=null? Model.Adi : "" )" />
    </div>
    <div class="form-group">
        <label for="Soyadi">Soyadı</label>
        <input id=" Soyadi" name="Soyadi" class="form-control" placeholder="Soyadını Giriniz" value="@(Model !=null? Model.Soyadi : "" )" />
    </div>
    <div class="form-group">
        <label for="Email">E posta</label>
        <input type="email" id=" Email" name="Email" class="form-control" placeholder="E posta Giriniz" value="@(Model !=null? Model.Email : "" )" />
    </div>
    <div class="form-group">
        <label for="Tel">Telefon</label>
        <input type="number" id=" Tel" name="Tel" class="form-control" placeholder="Telefon No Giriniz" value="@(Model !=null? Model.Tel : "" )" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

